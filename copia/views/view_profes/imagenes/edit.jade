block contenido
	div(class="col-md-3 remove-float center-block big-top-space")
		h1 Registro de usuario
		form(action="/app/imagenes/#{imagen.id}?_method=PUT" method="POST")
			div(class="form-group")
				label(for="title") Nombre 
				input(type="text" name="title" placeholder="nombre completo" id="title" class="form-control", value="#{imagen.title}")
			div(class="top-space")
				input(type="submit" value="guardar" class="btn btn-info")